<div class="container">
  <div class="text-center my-4">
    <h2>アカウント登録</h2>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-10 col-md-6">
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: 'form' do |f| %>
      
        <div class="mb-4">
          <%= f.label :username, 'ユーザーネーム（必須）:', class: "text-secondary fw-bold mb-2" %><br>
          <%= f.text_field :username, autofocus: true, autocomplete: 'username', class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :email, 'メールアドレス（必須）:', class: "text-secondary fw-bold mb-2" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :password, 'パスワード（必須）:', class: "text-secondary fw-bold mb-2" %><br>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: '6文字以上で入力してください', class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :password_confirmation, 'パスワード確認（必須）:', class: "text-secondary fw-bold mb-2" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="my-5 text-center">
          <%= f.submit '登録する', class: "fw-bold py-3 w-50" %>
        </div>
      <% end %>
    </div>
  </div>

</div>