<div class="container">
  <div class="text-center my-4">
    <h2>アカウント編集</h2>
  </div>

    <div class="row justify-content-center">
      
      <div class="col-10 col-md-6">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: 'form' do |f| %>
         <%= render "devise/shared/error_messages" %>
        
        <div class="mb-4">
          <%= f.label :username, 'ユーザーネーム', class: "text-secondary fw-bold mb-2" %>
          <span class="text-red fw-bold">必須</span>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control shadow-sm py-md-3" %>
        </div>
        
        <div class="mb-4">
          <%= f.label :email, 'メールアドレス', class: "text-secondary fw-bold mb-2" %>
          <span class="text-red fw-bold">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :password, '新しいパスワード', class: "text-secondary fw-bold mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードは6文字以上で設定してください", class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :password_confirmation, 'パスワード確認', class: "text-secondary fw-bold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :current_password, '現在のパスワード', class: "text-secondary fw-bold mb-2" %>
          <span class="text-red fw-bold">必須</span>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control shadow-sm py-md-3" %>
        </div>
      
        <div class="my-5 text-center">
          <%= f.submit "更新する", class: "fw-bold py-3 w-50" %>
        </div>
       <% end %>
      </div>
      
        
    </div>
  
  </div>
</div>
