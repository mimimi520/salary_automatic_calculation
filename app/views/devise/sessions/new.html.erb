<div class="container">
  <div class="text-center my-4">
    <h2>ログイン</h2>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-10 col-md-6">
      <%= form_with model: resource, url: session_path(resource_name), local: true, class: 'form' do |f| %>
    
      <div class="mb-4">
        <%= f.label :email, 'メールアドレス（必須）:', class: "text-secondary fw-bold mb-2" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: "form-control shadow-sm py-md-3" %>
      </div>
    
      <div class="mb-4">
        <%= f.label :password, 'パスワード（必須）:', class: "text-secondary fw-bold mb-2 pt-4" %><br>
        <%= f.password_field :password, autocomplete: 'current-password', class: "form-control shadow-sm py-md-3" %>
      </div>
    
      <div class="my-5 text-center">
        <%= f.submit 'ログインする', class: "shadow-sm fw-bold py-3 w-50" %>
      </div>
      <% end %>
    </div>
    
  </div>
  
</div>
